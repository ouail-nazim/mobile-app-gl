<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abs"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/auth"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/user"
        android:layout_width="284dp"
        android:layout_height="44dp"
        android:layout_x="14dp"
        android:layout_y="211dp"
        android:background="@drawable/champ_default"
        android:ems="10"
        android:hint="Identificateur"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:layout_x="14dp"
        android:layout_y="266dp"
        android:background="@drawable/champ_default"
        android:ems="10"
        android:hint="motdepasse"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/connexion"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_x="178dp"
        android:layout_y="322dp"
        android:background="@drawable/btn_button_lg_normal"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:paddingTop="12dp"
        android:text="Connexion"
        android:textColor="#ffffff" />

</AbsoluteLayout>